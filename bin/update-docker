#!/usr/bin/env bash

if [[ -e ~/downloads/mochitest-runner.tar ]]; then
  echo "about to load!"
  time docker load -i ~/downloads/mochitest-runner.tar;
  echo "loaded docker image"
fi

docker images

time docker pull jlongster/mochitest-runner

docker images

mkdir -p ~/downloads

echo "created downloads directory"

time docker save jlongster/mochitest-runner > ~/downloads/mochitest-runner.tar

echo "saved docker image to downloads"
